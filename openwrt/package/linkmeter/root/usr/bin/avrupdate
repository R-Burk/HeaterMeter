#!/bin/sh

. $IPKG_INSTROOT/lib/functions.sh
EXITCODE=0

platform_setup_DEFAULT() {
  DUDE_OPTS="-b 115200"
}

platform_setup_BCM2708() {
  lsmod | grep spi_bcm2835 > /dev/null || {
    echo Loading SPI modules...
    insmod spidev
    insmod spi-bcm2835
    CNT=5
    while [ ! -c /dev/spidev0.0 -a $CNT -gt 0 ] ; do
      sleep 1
      CNT=$((CNT-1))
    done
  }
  
  FUSES=`hmdude -v -b 128 -P/dev/spidev0.0 |\
     sed -n 's/^Low: 0x\(..\) High: 0x\(..\) Ext: 0x\(..\).*/\1\2\3/p'`
  echo -n AVR fuses $FUSES
 
  case "$FUSES" in
    62d9ff|62d907)
      echo " blank ATmega chip detected, flashing default"
      hmdude -v -b 128 -P/dev/spidev0.0 \
        -U/lib/firmware/hm.hex \
        -U lfuse:w:0xff -U hfuse:w:0xd7 -U efuse:w:0x05
      [ "$HEX" = "/lib/firmware/hm.hex" ] && HEX=""
      ;;
    ffdf*)
      echo " Arduino fuses, switching to preserve EEPROM"
      hmdude -P/dev/spidev0.0 \
        -U lfuse:w:0xff -U hfuse:w:0xd7 -U efuse:w:0x05
      ;;
    "")
      echo " ERROR"
      EXITCODE=19
      ;;
    *)
      echo " OK"
      ;;
  esac 
  
  DUDE_OPTS="-P/dev/spidev0.0 -V"
  echo
}
            
platform_setup() {
  config_load linkmeter
  config_get PLATFORM daemon platform "DEFAULT"
  
  echo LinkMeter platform is $PLATFORM
  eval "platform_setup_$PLATFORM" 2> /dev/null || \
    platform_setup_DEFAULT
}

platform_cleanup_DEFAULT() {
  true
}
platform_cleanup_BCM2708() {
  rmmod spi-bcm2835
}
platform_cleanup() {
  eval "platform_cleanup_$PLATFORM" 2> /dev/null || \
    platform_cleanup_DEFAULT
}

DCONTROL=1
HEX=""

while getopts ":dU:" opt ; do
  case $opt in
    d)
      DCONTROL=0
      ;;
    U)
      HEX=$OPTARG
      ;;
    :)
      echo Option -$OPTARG requires an argument
      exit 1
      ;;
    \?)
      echo Unknown option -$OPTARG
      ;;
  esac
done

[ -z "$HEX" ] && HEX=$(eval echo \$$OPTIND)

if [ "${HEX:0:4}" = "http" ] ; then
  wget -O/tmp/hm.hex $HEX 2>&1
  if [ $? -ne 0 ] ; then
    echo Download failed
    exit 1
  fi
  HEX="/tmp/hm.hex"
fi

[ $DCONTROL -ne 0 ] && {
  echo -n "Stopping LinkMeter "
  lmclient LMDC,0
  echo
}

platform_setup

if [ $EXITCODE -eq 0 ] ; then
  if [ -f "$HEX" ] ; then
    MD5=`md5sum $HEX`
    echo "                          $MD5"

    hmdude $DUDE_OPTS -U$HEX 2>&1
    EXITCODE=$?
    if [ $EXITCODE -eq 0 ] ; then
      echo Update successful
      [ "$HEX" == "/tmp/hm.hex" ] && rm $HEX
    else
      echo Update failed
    fi
  else
    [ -n "$HEX" ] && echo No input file $HEX
  fi
fi

platform_cleanup

[ $DCONTROL -ne 0 ] && {
  echo -n "Starting LinkMeter "
  lmclient LMDC,1
}

exit $EXITCODE

